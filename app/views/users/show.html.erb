<h1><%= @user.username %></h1>

<ul>
    <% @user.records.each do |record| %>
      <li><%= link_to record.title, record_path(record) %> by <%= link_to record.artist.name, artist_path(record.artist)%></li>
      <li><%= record.genre %></li>
      <li><%= record.release_date %></li>
      <%= link_to "Edit Album", edit_record_path(record) %> <br>
      <%= link_to "Delete Album", record_path(record), method: :delete %><br><br>
    <% end %>
</ul>



<%= link_to "Add Album", new_record_path %><br>

<%= link_to "Edit User", edit_user_path(@user) %> <br>
<%= link_to "Delete Account", user_path(@user), method: :delete %><br>

<%= link_to "Log Out", logout_path, method: :delete %> <br>
