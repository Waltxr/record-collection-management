<h1>Add Album</h1>

<%= form_for @record do |f| %>
  <%= f.label "Artist"  %> <br>
  <%= f.text_field :artist  %> <br>
  <%= f.label :title  %> <br>
  <%= f.text_field :title %> <br>
  <%= f.label :genre %> <br>
  <%= f.text_field :genre %> <br>
  <%= f.label :release_date %> <br>
  <%= f.date_field :release_date %> <br>

  <%= f.fields_for UserRecord.new do |user_record_form| %>
    <%= user_record_form.label :rating %> <br>
    <%= user_record_form.number_field :rating %> <br>

    <%= user_record_form.label :notes %> <br>
    <%= user_record_form.text_area :notes %> <br>
  <% end %>

  <%= f.submit %>
<% end %>
